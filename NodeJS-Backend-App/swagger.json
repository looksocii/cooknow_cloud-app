                "ShareDate": {
                    "type": "string"
                },
                "UserAccountID": {
                    "type": "integer"
                },
                "FoodMenuID": {
                    "type": "integer"
                }
            }
        },
        "ImageFood": {
            "required": ["FoodImg", "UserAccountID", "FoodMenuID"],
