                "FoodImg": {
                    "type": "string"
                },
                "UserAccountID": {
                    "type": "integer"
                },
                "FoodMenuID": {
                    "type": "integer"
                }
            }
        },
        "MessageChat": {
            "required": [
                "ContentText",
                "AddDate",
                "FromUserID",
                "UserAccountID"
