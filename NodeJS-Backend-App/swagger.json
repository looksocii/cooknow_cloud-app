            }
        },
        "/deleteuser/{id}": {
            "delete": {
                "summary": "Delete user with given ID",
                "tags": ["Users"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID of user",
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User is deleted"
                    }
                }
            }
        },
