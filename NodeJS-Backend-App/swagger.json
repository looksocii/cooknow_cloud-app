{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Cook Now (Backend App)",
        "description": "Using Node.JS, Winston(Logging), Swagger UI, Prettier",
        "license": {
            "name": "Puntakarn K.",
            "url": "https://www.linkedin.com/in/puntakarn-kaewsanghan/"
        }
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
        {
            "name": "Users",
            "description": "API for User Account"
        }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/users": {
            "get": {
                "tags": ["Users"],
                "summary": "Get All Users",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/UserAccount"
                        }
                    }
                }
            }
        },
        "/user/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of user that we want to find",
                    "type": "integer"
                }
            ],
            "put": {
                "summary": "Update user with give ID",
                "tags": ["Users"],
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User with new values of properties",
                        "schema": {
                            "$ref": "#/definitions/UserAccount"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User is updated",
                        "schema": {
                            "$ref": "#/definitions/UserAccount"
                        }
                    }
                }
            }
        },
        "/user": {
            "post": {
                "tags": ["Users"],
                "summary": "Create New User",
                "parameters": [
                    {
                        "name": "User",
                        "in": "body",
                        "description": "For Create New User",
                        "schema": {
                            "$ref": "#/definitions/UserAccount"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "New user is created",
                        "schema": {
                            "$ref": "#/definitions/UserAccount"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "UserAccount": {
            "required": ["UserName", "PassWord", "Email", "Phone", "BirthDate"],
            "properties": {
                "UserName": {
                    "type": "string",
                    "uniqueItems": true
                },
                "PassWord": {
                    "type": "string"
                },
                "Email": {
                    "type": "string"
                },
                "Phone": {
                    "type": "string"
                },
                "BirthDate": {
                    "type": "string"
                }
            }
        }
    }
}
