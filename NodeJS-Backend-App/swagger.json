                },
                "PassWord": {
                    "type": "string"
                },
                "Email": {
                    "type": "string"
                },
                "Phone": {
                    "type": "string"
                },
                "BirthDate": {
                    "type": "string"
                }
            }
        },
        "FoodMenu": {
            "required": ["FoodName", "FoodDetail", "AddDate", "UserAccountID"],
            "properties": {
                "FoodName": {
                    "type": "string"
                },
                "FoodDetail": {
                    "type": "string"
                },
                "AddDate": {
                    "type": "string"
                },
                "UserAccountID": {
                    "type": "integer"
                }
            }
        },
        "ReviewFood": {
            "required": [
                "ReviewDetail",
                "Rating",
                "ReviewDate",
                "UserAccountID",
                "FoodMenuID"
            ],
            "properties": {
                "ReviewDetail": {
                    "type": "string"
                },
                "Rating": {
                    "type": "integer"
