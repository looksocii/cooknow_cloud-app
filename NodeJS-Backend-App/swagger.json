{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Cook Now (Backend App)",
        "description": "Using Node.JS, Winston(Logging), Swagger UI, Prettier",
        "license": {
            "name": "Puntakarn K.",
            "url": "https://www.linkedin.com/in/puntakarn-kaewsanghan/"
        }
    },
    "host": "localhost:3000",
    "basePath": "/",
    "tags": [
        {
            "name": "Users",
            "description": "API for User Account"
        },
        {
            "name": "Foods",
            "description": "API for Food Menu"
        }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
        "/users": {
            "get": {
                "tags": ["Users"],
                "summary": "Get All Users",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/user/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of user that we want to find",
                    "type": "integer"
                }
            ],
            "put": {
                "summary": "Update user with give ID",
                "tags": ["Users"],
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User with new values of properties",
                        "schema": {
                            "$ref": "#/definitions/UserAccount"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User is updated"
                    }
                }
            }
        },
        "/user": {
            "post": {
                "tags": ["Users"],
                "summary": "Create New User",
                "parameters": [
                    {
                        "name": "User",
                        "in": "body",
                        "description": "For Create New User",
                        "schema": {
                            "$ref": "#/definitions/UserAccount"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "New user is created"
                    }
                }
            }
        },
        "/deleteuser/{id}": {
            "delete": {
                "summary": "Delete user with given ID",
                "tags": ["Users"],
                "responses": {
                  "200": {
                    "description": "User is deleted"
                  }
                }
            },
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of user that we want to find",
                    "type": "integer"
                }
            ]
        },
        "/foods": {
            "get": {
                "tags": ["Foods"],
                "summary": "Get All Foods",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/food": {
            "post": {
                "tags": ["Foods"],
                "summary": "Create New Food",
                "parameters": [
                    {
                        "name": "Food",
                        "in": "body",
                        "description": "For Create New Food",
                        "schema": {
                            "$ref": "#/definitions/FoodMenu"
                        }
                    }
                ],
                "produces": ["application/json"],
                "responses": {
                    "200": {
                        "description": "New food is created"
                    }
                }
            }
        }
    },
    "definitions": {
        "UserAccount": {
            "required": ["UserName", "PassWord", "Email", "Phone", "BirthDate"],
            "properties": {
                "UserName": {
                    "type": "string",
                    "uniqueItems": true
                },
                "PassWord": {
                    "type": "string"
                },
                "Email": {
                    "type": "string"
                },
                "Phone": {
                    "type": "string"
                },
                "BirthDate": {
                    "type": "string"
                }
            }
        },
        "FoodMenu": {
            "required": ["FoodName", "FoodDetail", "AddDate", "UserAccountID"],
            "properties": {
                "FoodName": {
                    "type": "string"
                },
                "FoodDetail": {
                    "type": "string"
                },
                "AddDate": {
                    "type": "string"
                },
                "UserAccountID": {
                    "type": "integer"
                }
            }
        },
        "ReviewFood": {
            "required": ["ReviewDetail", "Rating", "ReviewDate", "UserAccountID", "FoodMenuID"],
            "properties": {
                "ReviewDetail": {
                    "type": "string"
                },
                "Rating": {
                    "type": "integer"
                },
                "ReviewDate": {
                    "type": "string"
                },
                "UserAccountID": {
                    "type": "integer"
                },
                "FoodMenuID": {
                    "type": "integer"
                }
            }
        },
        "ShareFood": {
            "required": ["ShareDate", "UserAccountID", "FoodMenuID"],
            "properties": {
                "ShareDate": {
                    "type": "string"
                },
                "UserAccountID": {
                    "type": "integer"
                },
                "FoodMenuID": {
                    "type": "integer"
                }
            }
        },
        "ImageFood": {
            "required": ["FoodImg", "UserAccountID", "FoodMenuID"],
            "properties": {
                "FoodImg": {
                    "type": "string"
                },
                "UserAccountID": {
                    "type": "integer"
                },
                "FoodMenuID": {
                    "type": "integer"
                }
            }
        },
        "MessageChat": {
            "required": ["ContentText", "AddDate", "FromUserID", "UserAccountID"],
            "properties": {
                "ContentText": {
                    "type": "string"
                },
                "AddDate": {
                    "type": "string"
                },
                "FromUserID": {
                    "type": "integer"
                },
                "UserAccountID": {
                    "type": "integer"
                }
            }
        },
        "Follow": {
            "required": ["FollowingUserID", "UserAccountID"],
            "properties": {
                "FollowingUserID": {
                    "type": "integer"
                },
                "UserAccountID": {
                    "type": "integer"
                }
            }
        }
    }
}
